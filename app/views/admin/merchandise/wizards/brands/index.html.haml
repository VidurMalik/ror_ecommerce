= render :partial => '/admin/merchandise/wizards/sub_header'
- if  @brands.empty?
  %h3 New Brand
- else
  %h3 Pick a Brand
#shopping_addresses_selections.clearfix
  - @brands.each do |brand|
    %div{:class => "six large-6 column box #{cycle( '', 'last')} #{'selected' if selected?(brand.id)}"}
      %label= brand.name
      %br/
      = button_to 'Use', admin_merchandise_wizards_brand_path(brand), :class => "button spade inline-block", :method => :put
%hr/
- unless  @brands.empty?
  %h3 Create a New Brand
= form_for @brand, :url => admin_merchandise_wizards_brands_path do |brand_form|
  = render :partial =>  'form', :locals => {:f => brand_form}
