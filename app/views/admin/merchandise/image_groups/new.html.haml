%h1 New Image Group
= form_for @image_group, :url => admin_merchandise_image_groups_path(@image_group) do |f|
  = f.error_messages
  %ul
    %li.field
      = f.label :name
      = f.text_field :name
    %li.field
      = f.label :product_id
      = f.select :product_id, products, :include_blank => true
  .actions= f.submit 'Create' , :class => 'button'
%p= link_to "Back to List", admin_merchandise_image_groups_path, :class => 'button'
