= form_for( @shipping_address, :url => admin_shopping_checkout_shipping_addresses_path) do |f|
  - if @shipping_address.errors.any?
    #error_explanation
      %h2
        = pluralize(@shipping_address.errors.count, "error")
        prohibited this shipping address from being saved:
      %ul
        - @shipping_address.errors.full_messages.each do |msg|
          %li= msg
  .inline
    .field.column
      = f.label :first_name
      = f.text_field :first_name, :class => 'span-3'
    .field.column
      = f.label :last_name
      = f.text_field :last_name, :class => 'span-3'
  .clear
  .inline
    .field.column
      = f.label :address1
      = f.text_field :address1
      %br/
      = f.label :address2
      = f.text_field :address2
  .clear
  - if Settings.require_state_in_address
    .field.column
      = f.label    :state_id, "State/Province"
      = f.select   :state_id, @states, |
        :include_blank => true         |
  - elsif countries.size == 1
    .field.column
      = f.label :country_id, "Country"
      = countries.first.name
      = f.hidden_field   :country_id
  - else
    .field.column
      = f.label    :country_id, "Country"
      = f.select   :country_id, select_countries, |
        :include_blank => true                    |
  .clear
  .inline.span-12
    .field.column
      = f.label :city
      = f.text_field :city, :class => 'span-3'
    .field.column
      = f.label :zip_code
      = f.text_field :zip_code, :class => 'span-2'
  .clear
  .field
  .field.column
    = check_box_tag :default, 1, f.object.default?
    = f.label :default, "Make this my default shipping method", :class => 'auto_width'
  .actions.column.prepend-1
    = f.submit
