%h1 New Comment
%p
  = customer.name
= form_for @comment, :url => admin_customer_service_user_comments_path(customer, @comment) do |f|
  = render :partial => 'form', :locals => {:f => f}
  .actions= f.submit 'Create' , :class => 'button'
%p= link_to "Back to List", admin_customer_service_user_comments_path(customer), :class => 'button'
